@page "/"
@using BlazorApp2.Components.Components
@inject DialogService DialogService

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<Button OnClick="Callback">点我打开问题Table</Button>

@code {
    private void Callback()
    {
        var tests = new List<Test>();
        tests.Add(new Test()
        {
            Name = "张三",
            Address = "北京"
        });
        DialogService.ShowModal<TableTest>(new ResultDialogOption()
        {
            Title = "测试问题",
            ComponentParameters = new Dictionary<string, object>()
            {
                [nameof(TableTest.Tests)] = tests
            }
        });
    }
}